<?xml version="1.0" encoding="UTF-8"?>

<ReportDefn
	name="Inventory On Hand at Retail"
	module="Inventory"
	orientation="Landscape"
	pageWidth="6600"
	pageHeight="5100"
	leftMargin="150"
	rightMargin="150"
	topMargin="150"
	bottomMargin="150">

  <initialize><![CDATA[
	proc filter_row { } {
	    global param column

	    if { $param(include_zero) == "yes" } { return 1 }
	    if { $column(on_hand) != 0 && $column(on_hand) != "" } {
		return 1
	    }
	    return 0
	}
  ]]></initialize>

  <dataSource type="Filter">
    <expr>[filter_row]</expr>

    <dataSource type="Query">
	<code><![CDATA[
	    set item_select ""

	    if { $param(dept_id) != "" } {
		if { $item_select != "" } { append item_select " or " }
		append item_select "item.dept_id = '$param(dept_id)'"
	    }

	    if { $param(subdept_id) != "" } {
		if { $item_select != "" } { append item_select " or " }
		append item_select "item.subdept_id = '$param(subdept_id)'"
	    }

	    if { $param(location_id) != "" } {
		if { $item_select != "" } { append item_select " or " }
		if { $param(store_id) == "" } {
		    append item_select "exists (select store_id from item_store where item_store.item_id = item.item_id and item_store.location_id = '$param(location_id)')"
		} else {
		    append item_select "exists (select store_id from item_store where item_store.item_id = item.item_id and and item_store.store_id = '$param(store_id)' and item_store.location_id = '$param(location_id)')"
		}
	    }

	    if { $param(group_id) != "" } {
		if { $item_select != "" } { append item_select " or " }
		append item_select "exists (select group_id from item_group where item_group.item_id = item.item_id and item_group.group_id = '$param(group_id)')"
	    }

	    if { $param(vendor_id) != "" } {
		if { $item_select != "" } { append item_select " or " }
		append item_select "exists (select vendor_id from item_vendor where item_vendor.item_id = item.item_id and item_vendor.vendor_id = '$param(vendor_id)')"
	    }

	    if { $param(item_id) != "" } {
		if { $item_select != "" } { append item_select " or " }
		append item_select "item.item_id = '$param(item_id)'"
	    }

	    set min_select "select sum(min_qty) from item_store where item_store.item_id = item.item_id and item_store.store_id = '$param(store_id)'";
	    set max_select "select sum(max_qty) from item_store where item_store.item_id = item.item_id and item_store.store_id = '$param(store_id)'";
	    set oh_select "select sum(on_hand) from item_change where item_change.item_id = item.item_id and change_date <= '$param(date)' and store_id = '$param(store_id)'"
	    set price_select "select avg(unit_price) from item_cost where item_cost.item_id = item.item_id and item_cost.size_name = item.sell_size and item_cost.store_id = '$param(store_id)'"

	    set query "select dept.name,subdept.name,item_plu.number,
	    item.description,item.sell_size,item_size.qty,($min_select),
	    ($max_select),($oh_select),($price_select) from (((item join
	    item_plu on item.item_id = item_plu.item_id and item_plu.seq_num
	    = 0) join item_size on item_size.item_id = item.item_id and
	    item_size.name = item.sell_size) join dept on item.dept_id =
	    dept.dept_id) join subdept on item.subdept_id = subdept.subdept_id
	    where item.inventoried = 'Y'"
	    if { $item_select != "" } {
		append query " and ($item_select)"
	    }
	    return "$query order by dept.name,subdept.name,10"
	]]></code>
	<column>dept_name</column>
        <column>subdept_name</column>
        <column>item_number</column>
        <column>description</column>
        <column>size_name</column>
        <column>size_qty</column>
        <column>min</column>
        <column>max</column>
        <column>on_hand</column>
        <column>unit_price</column>
    </dataSource>
  </dataSource>

  <parameter
	name="date"
	description="Enter the as/at date:"
	defaultValue="d"
	type="date"/>
  <parameter
	name="store_id"
	description="Store:"
	type="lookup"
	dataType="store"/>
  <parameter
	name="dept_id"
	description="Department (blank for all):"
	manditory="false"
	type="lookup"
	dataType="dept"/>
  <parameter
	name="subdept_id"
	description="Subdepartment (blank for all):"
	manditory="false"
	type="lookup"
	dataType="subdept"/>
  <parameter
	name="group_id"
	description="Group (blank for all):"
	manditory="false"
	type="lookup"
	dataType="group"/>
  <parameter
	name="location_id"
	description="Location (blank for all):"
	manditory="false"
	type="lookup"
	dataType="location"/>
  <parameter
	name="vendor_id"
	description="Vendor (blank for all):"
	manditory="false"
	type="lookup"
	dataType="vendor"/>
  <parameter
	name="item_id"
	description="Item (blank for all):"
	manditory="false"
	type="lookup"
	dataType="item"/>
  <parameter
	name="include_zero"
	description="Include zero values?"
	defaultValue="no"
	type="bool"/>

  <variable
	name="disp_on_hand"
	resetType="Report">
	<resetExpr>0</resetExpr>
	<calcExpr>
$column(on_hand) == {} ? 0 : [expr $column(on_hand) / $column(size_qty)]
	</calcExpr>
  </variable>
  <variable
	name="disp_unit_price"
	resetType="Report">
	<resetExpr>0</resetExpr>
	<calcExpr>
$column(unit_price) == {} ? 0 : $column(unit_price)
	</calcExpr>
  </variable>
  <variable
	name="disp_total_price"
	resetType="Report">
	<resetExpr>0</resetExpr>
	<calcExpr>
$var(disp_on_hand) * $var(disp_unit_price)
	</calcExpr>
  </variable>
  <variable
	name="dt_on_hand"
	resetType="Group"
	resetGroup="dept">
	<sum>$var(disp_on_hand)</sum>
  </variable>
  <variable
	name="st_on_hand"
	resetType="Group"
	resetGroup="subdept">
	<sum>$var(disp_on_hand)</sum>
  </variable>
  <variable
	name="gt_on_hand"
	resetType="Report">
	<sum>$var(disp_on_hand)</sum>
  </variable>
  <variable
	name="dt_total_price"
	resetType="Group"
	resetGroup="dept">
	<sum>$var(disp_total_price)</sum>
  </variable>
  <variable
	name="st_total_price"
	resetType="Group"
	resetGroup="subdept">
	<sum>$var(disp_total_price)</sum>
  </variable>
  <variable
	name="gt_total_price"
	resetType="Report">
	<sum>$var(disp_total_price)</sum>
  </variable>
  <variable
	name="dt_unit_price"
	resetType="Group"
	resetGroup="dept">
	<resetExpr>0</resetExpr>
	<calcExpr>
$var(dt_on_hand) == 0 ? 0 : [expr $var(dt_total_price) / $var(dt_on_hand)]
	</calcExpr>
  </variable>
  <variable
	name="st_unit_price"
	resetType="Group"
	resetGroup="subdept">
	<resetExpr>0</resetExpr>
	<calcExpr>
$var(st_on_hand) == 0 ? 0 : [expr $var(st_total_price) / $var(st_on_hand)]
	</calcExpr>
  </variable>
  <variable
	name="gt_unit_price"
	resetType="Report">
	<resetExpr>0</resetExpr>
	<calcExpr>
$var(gt_on_hand) == 0 ? 0 : [expr $var(gt_total_price) / $var(gt_on_hand)]
	</calcExpr>
  </variable>

